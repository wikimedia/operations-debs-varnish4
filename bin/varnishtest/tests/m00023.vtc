varnishtest "Test VMOD ACLs"

varnish v1 -vcl {
	import ${vmod_debug};

	backend dummy {
		.host = "${bad_ip}";
	}

	acl loopback {
		"127"/24;
	}

	sub vcl_init {
		if (!debug.match_acl(loopback, "127.0.0.127")) {
			debug.init_fail();
		}
	}

	sub vcl_recv {
		if (debug.match_acl(loopback, client.ip)) {
			return (synth(200));
		}
		return (synth(500));
	}
} -start

client c1 {
	txreq
	rxresp
	expect resp.status == 200
} -run
