varnishtest "Test substring matching in std"

server s1 {
       rxreq
       txresp

       rxreq
       txresp
} -start

varnish v1 -vcl+backend {
	import ${vmod_std};

	sub vcl_deliver {
	    if (std.strstr(req.url, "foo")) {
		set resp.http.sub = "found";	
	    } else {
		set resp.http.sub = "not found";	
	    }
		
	}
} -start

client c1 {
	txreq -url "/foobar"
	rxresp
	expect resp.http.sub == "found"


	txreq -url "/quux"
	rxresp
	expect resp.http.sub == "not found"
} -run

